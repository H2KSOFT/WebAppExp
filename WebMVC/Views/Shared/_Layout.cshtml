@using System.Security.Claims
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Órdenes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Ordenes")">
                📋 Sistema de Órdenes
            </a>
            <div class="navbar-nav ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="navbar-text me-3">
                        👤 @User.Identity.Name
                        <span class="badge bg-light text-dark">@User.FindFirst(ClaimTypes.Role)?.Value</span>
                    </span>
                    <form method="post" action="@Url.Action("Logout", "Auth")" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm">🚪 Cerrar Sesión</button>
                    </form>
                }
            </div>
        </div>
    </nav>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <small>&copy; 2025 Sistema de Órdenes</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>